{# def items=[1,2,3,4,5] #}

<div class="bg-white pt-20">
  <div class="mx-auto max-w-7xl overflow-hidden sm:px-6 lg:px-8">
    <h2 class="sr-only">Products</h2>

    <div class="-mx-px grid grid-cols-2 border-l border-gray-200 sm:mx-0 md:grid-cols-3 lg:grid-cols-4">
    {% for i in items %}
      <div class="group relative border-b border-r border-gray-200 p-4 sm:p-6">
        <div class="aspect-video overflow-hidden rounded-lg bg-gray-200 group-hover:opacity-75">
          <img src="{{ i.img_url }}" alt="TODO" class="h-full w-full">
        </div>
        <div class="mt-10 pb-4 pt-10 text-center">
          <h3 class="text-sm font-medium text-gray-900">
            <a href="{{ url_for('show_item', id = i.id) }}">
              <span aria-hidden="true" class="absolute inset-0"></span>
              {{ i.title }}
            </a>
          </h3>
        <div>
          <div class="mt-3 flex flex-col items-center">
            <p class="sr-only">5 out of 5 stars</p>
            <div class="flex items-center">
              {% for i in i.rating %}
              {% if i == 1 %}
              <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
              </svg>
              {% else %}
              <svg class="text-gray-300 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
              </svg>
              {% endif %}
              {% endfor %}
            </div>
            <p class="mt-1 text-sm text-gray-500">{{ i.total_rating }} reviews</p>
          </div>
        </div>
        <div>
          <p class="mt-4 text-base font-medium text-gray-900">${{i.price}}</p>
        </div>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
</div>